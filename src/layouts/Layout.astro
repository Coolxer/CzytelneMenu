---
import data from "~/data.json"

import "@assets/styles/global.css"

import MySEO, { type Meta, type Schema } from "@components/core/MySEO.astro"

interface Props {
  meta: Meta
  schema?: Schema
  class?: string
}

const { meta, schema, class: className } = Astro.props

const SITE = data.site
---

<!doctype html>
<html lang={SITE.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Favicons -->
    <link
      rel="icon"
      type="image/png"
      href="/favicons/favicon-96x96.png"
      sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
    <link rel="
      shortcut
      icon" href="/favicons/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="CzytelneMenu" />
    <link rel="manifest" href="/favicons/site.webmanifest" />

    <!-- Sitemap -->
    <link rel="sitemap" href={"/sitemap-index.xml"} />

    <!-- Meta and schema tags -->
    <MySEO meta={meta} schema={schema} />

    <!-- RSS feed -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE.meta["home-title"]}
      href={`${Astro.site}rss.xml`}
    />
  </head>
  <body class="">
    <div class:list={["flex min-h-screen flex-col justify-between", className]}>
      <slot />
    </div>

    <!-- 100% privacy-first analytics -->
    <script
      async
      src="https://scripts.simpleanalyticscdn.com/latest.js"
      is:inline
    ></script>
  </body>
</html>
